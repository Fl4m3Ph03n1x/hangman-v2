<p>
    Turns left: <%= @tally.turns_left %>
</p>

<p>
    Letters used: <%= Enum.join(@tally.used, ", ") %>
</p>

<p>
    Word so far: <%= Enum.join(@tally.letters, " ") %>
</p>

<%= form_for(@conn, Routes.hangman_path(@conn, :update), [as: "make_move", method: :put], fn form -> %>
    <%= text_input(form, :guess) %>
    <%= submit("Make a guess") %>
<% end) %>